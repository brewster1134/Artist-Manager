- content_for :title do
  = "Edit #{@work.title}"

- content_for :page_title do
  = link_to "Preview", @work
  = "Edit #{@work.title}"
  = link_to "Delete", @work, :method => :delete, :confirm => t('destroy.confirm', :x => @work.title)

%fieldset
  %legend Manage Images
  = render "shared/file_upload", :path => work_work_images_path(@work), :label => "Images"

= simple_form_for @work do |w|
  = render 'shared/form_errors', instance: @work
  = render 'form_fields', work: w
  .actions
    = w.button :submit
