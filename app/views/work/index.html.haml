- content_for :js do
  :coffeescript
    work_index_path = "#{work_index_path}"

- content_for :title do
  - ["Work", params[:tag]].compact * ": "
    
- content_for :page_title do
  = "Currently Showing:" 
  = select_tag :tag, options_for_select(tag_select_array, params[:tag]), :id => "tag_select"
.items
  - if @series.present?
    %h1 Series
    .section.series
      - @series.each do |s|
        = render 'shared/item', :item => s
  
  - if @work.present?
    %h1 Work
    .section.work
      - @work.each do |w|
        = render 'shared/item', :item => w
