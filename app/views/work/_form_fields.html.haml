= work.input :series_id, :collection => Series.all.collect{|s| [s.title, s.id]}, :hint => link_to("Create New Series", new_series_path).html_safe
= work.input :title
= work.input :tag_list, :url => autocomplete_tag_name_work_index_path, :as => :autocomplete, :input_html => {:'data-delimiter' => ', '}
= work.input :description, wrapper_html: { class: "markup_edit" }
= work.input :media
= work.input :dimensions
= work.input :completion_year, :collection => (100.years.ago.year..Date.today.year).to_a.reverse, :selected => Date.today.year, :include_blank => true
= work.input :video_link
= work.input :view, :collection => Settings.site[:work_show_views], :include_blank => true
= work.input :featured
= work.input :for_sale
%fieldset#for_sale
  %legend For Sale Options
  %fieldset
    %legend Price
    = work.input :price, :input_html => {size: 5}
    = work.input :price_currency, collection: currency_select_array, prompt: false
  %fieldset
    %legend Shipping
    = work.input :shipping, :input_html => {size: 5}
    = work.input :shipping_currency, collection: currency_select_array, prompt: false
  = work.input :quantity, input_html: { size: 5 }