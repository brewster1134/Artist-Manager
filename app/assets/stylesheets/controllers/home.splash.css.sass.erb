//= require slideshow

@import compass/css3
@import settings

#logo
  margin: 15px 0
  text-align: center
  font-size: 2em
  text-decoration: none
  img
    max-width: $content_width
.view
  margin-bottom: 30px
.view#slideshow_view
  .slideshow
    height: <%= Settings.image_sizes[:home][:splash][:slideshow][:height] %>px
    +single-box-shadow($color_01)
    
.view#random_view
  img
    +single-box-shadow($color_01)