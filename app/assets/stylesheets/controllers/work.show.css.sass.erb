@import compass/css3
@import compass/utilities
@import settings
@import mixins

#video_link_view,
#slideshow_view
  .work_title
    text-align: center
    border: none
  iframe.video
    +full_site_width
    +single-box-shadow($grey_04, 0px, 1px, 5px, 0px)
    bottom: -2px
  .slideshow
    +slideshow
  .image_scroller
    height: <%= Settings.image_sizes[:work][:show][:image_scroller_height] %>px
    a.jTscrollerNextButton,
    a.jTscrollerPrevButton
      top: 18px
  .info
    margin: 0 40px
    text-align: center
    span
      padding: 2px 20px
      background: $grey_09
      display: inline-block
      margin: 0 10px
  .details
    +clearfix
    $details_padding: 40px
    padding: $details_padding
    >div
      padding: 20px
      background: $grey_09
    &.for_sale
      $for_sale_width: 150px
      .description
        float: left
        width: $content_width - ($details_padding * 5) - $for_sale_width 
      .for_sale
        float: right
        width: $for_sale_width
