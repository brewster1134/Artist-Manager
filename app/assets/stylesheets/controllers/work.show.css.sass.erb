@import compass/css3
@import compass/utilities
@import settings
@import mixins

.work_title
  text-align: center
  border: none
  >a
    font-size: 0.7em
    text-decoration: none
    color: $grey_05
    display: block

.image_scroller
  .jThumbnailScroller
    border-width: 0 0 2px 0
  height: <%= Settings.image_sizes[:work][:show][:scroller][:height] %>px
  a.jTscrollerNextButton,
  a.jTscrollerPrevButton
    top: 18px
.info
  margin: 0 40px
  text-align: center
  span
    padding: 2px 20px
    background: $grey_09
    display: inline-block
    margin: 0 10px
#price_request
  padding: 30px 15px 0
  font-size: 0.9em
.details
  +clearfix
  $for_sale_width: 150px
  $details_padding: $content_padding
  padding: $details_padding
  >div
    padding: $details_padding * 2
    background: $grey_09
  &.for_sale
    .description
      float: left
      width: $content_width - ($details_padding * 12) - $for_sale_width
    .for_sale
      float: right
      width: $for_sale_width
      text-align: center
      .price
        font-size: 2em
        border-bottom: 1px solid $grey_02
        padding-bottom: 5px
      .shipping
        padding: 2px
      .option
        padding: 10px 0
        border-bottom: 1px solid $grey_02
        a, span
          display: block
          font-size: 1.5em
          text-decoration: none
          padding: 4px
          &:hover
            background: white
#video_link_view
  iframe.video
    +full_site_width
    +single-box-shadow($grey_04, 0px, 1px, 5px, 0px)
    bottom: -2px
#slideshow_view
  .slideshow
    +slideshow
    height: <%= Settings.image_sizes[:work][:show][:slideshow][1] %>px
    margin-bottom: 0
    .nivo-controlNav
      bottom: -47px
  .details
    margin-top: 15px
#plain_view
  .images
    background: black
    +clearfix
    +single-box-shadow($grey_04, 0px, 1px, 5px, 0px)
    +full_site_width
    border-width: 3px 1px
    border-style: solid
    border-color: $grey_01
    img
      float: left